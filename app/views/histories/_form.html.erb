<%= form_with(model: history, local: true, multipart: true, class: "form-horizontal") do |form| %>
  <% if history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:</h2>

      <ul>
      <% history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= form.label :title, "Título", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :title, id: :history_title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :remote_picture_url, "URL Imagen", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= image_tag(history.picture.thumb, style: "margin-bottom: 10px; border-radius: 5px;") if history.picture? %>

        <%= form.text_field :remote_picture_url, id: :history_picture, class: "form-control" %>
      </div>
      <%= form.hidden_field :picture_cache %>
    </div>

    <div class="form-group">
      <%= form.label :content, "Descripción", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_area :content, id: :history_content, class: "form-control", rows: 10 %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit "Enviar", class: "btn btn-primary" %>
        <%= link_to 'Back', histories_path, class: "btn btn-default"  %>
      </div>
    </div>
  </fieldset>
<% end %>
